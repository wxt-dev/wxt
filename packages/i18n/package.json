{
  "name": "@wxt-dev/i18n",
  "description": "Type-safe wrapper around browser.i18n.getMessage with additional features",
  "version": "0.2.4",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wxt-dev/wxt.git",
    "directory": "packages/i18n"
  },
  "homepage": "http://wxt.dev/guide/i18n/installation.html",
  "keywords": [
    "wxt",
    "module",
    "i18n"
  ],
  "author": {
    "name": "Aaron Klinker",
    "email": "aaronklinker1+wxt@gmail.com"
  },
  "license": "MIT",
  "funding": "https://github.com/sponsors/wxt-dev",
  "scripts": {
    "build": "buildc -- tsdown src/index.ts src/build.ts src/module.ts",
    "check": "buildc --deps-only -- check",
    "test": "buildc --deps-only -- vitest"
  },
  "dependencies": {
    "@wxt-dev/browser": "workspace:^",
    "chokidar": "^4.0.3",
    "confbox": "^0.1.8 || ^0.2.2",
    "fast-glob": "^3.3.3"
  },
  "peerDependencies": {
    "wxt": ">=0.19.7"
  },
  "peerDependenciesMeta": {
    "wxt": {
      "optional": true
    }
  },
  "devDependencies": {
    "@aklinker1/check": "^2.2.0",
    "@types/node": "^20.17.6",
    "oxlint": "^1.33.0",
    "publint": "^0.3.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vitest-plugin-random-seed": "^1.1.2",
    "wxt": "workspace:*"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./build": {
      "types": "./dist/build.d.mts",
      "default": "./dist/build.mjs"
    },
    "./module": {
      "types": "./dist/module.d.mts",
      "default": "./dist/module.mjs"
    }
  },
  "files": [
    "dist"
  ]
}
