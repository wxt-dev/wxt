{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.20.3"
  },
  "packageManager": "bun@1.2.11",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check": "check && bun run --filter '*' check",
    "test": "bun run --filter '*' test run",
    "test:coverage": "bun run --filter '*' test:coverage",
    "prepare": "simple-git-hooks",
    "prepublish": "bun run --silent build",
    "docs:gen": "typedoc --options docs/typedoc.json",
    "docs:dev": "bun --silent docs:gen && vitepress dev docs",
    "docs:build": "bun --silent docs:gen && vitepress build docs",
    "docs:preview": "bun --silent docs:gen && vitepress preview docs"
  },
  "devDependencies": {
    "@aklinker1/buildc": "^1.1.4",
    "@aklinker1/check": "2.0.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@types/fs-extra": "^11.0.4",
    "@vitest/coverage-v8": "^3.1.2",
    "changelogen": "^0.6.1",
    "consola": "^3.4.2",
    "fast-glob": "^3.3.3",
    "feed": "^4.2.2",
    "fs-extra": "^11.3.0",
    "lint-staged": "^15.5.1",
    "markdown-it-footnote": "^4.0.0",
    "nano-spawn": "^0.2.0",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.13.0",
    "tsx": "4.19.4",
    "typedoc": "^0.25.4",
    "typedoc-plugin-frontmatter": "^1.3.0",
    "typedoc-plugin-markdown": "4.0.0-next.23",
    "typedoc-vitepress-theme": "1.0.0-next.3",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3",
    "vitepress-knowledge": "^0.4.1",
    "vitepress-plugin-group-icons": "^1.5.2",
    "vitest-mock-extended": "^3.1.0",
    "vue": "^3.5.13",
    "wxt": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  },
  "patchedDependencies": {
    "markdown-it-footnote": "patches/markdown-it-footnote.patch"
  }
}
