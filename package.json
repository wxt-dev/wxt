{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.20.3"
  },
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "check": "check && pnpm -r --sequential run check",
    "test": "pnpm -r --sequential run test run",
    "test:coverage": "pnpm -r --sequential run test:coverage",
    "prepare": "simple-git-hooks",
    "prepublish": "pnpm -s build",
    "docs:gen": "typedoc --options docs/typedoc.json",
    "docs:dev": "pnpm -s docs:gen && vitepress dev docs",
    "docs:build": "pnpm -s docs:gen && vitepress build docs",
    "docs:preview": "pnpm -s docs:gen && vitepress preview docs"
  },
  "devDependencies": {
    "@aklinker1/buildc": "^1.1.6",
    "@aklinker1/check": "^2.2.0",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^4.0.18",
    "changelogen": "^0.6.2",
    "consola": "^3.4.2",
    "fast-glob": "^3.3.3",
    "feed": "^5.2.0",
    "fs-extra": "^11.3.3",
    "lint-staged": "^16.2.7",
    "markdown-it-footnote": "^4.0.0",
    "markdownlint-cli": "^0.45.0",
    "nano-spawn": "^1.0.3",
    "p-map": "^7.0.4",
    "prettier": "^3.8.1",
    "semver": "^7.7.4",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.18.4",
    "tsx": "4.21.0",
    "typedoc": "^0.25.4",
    "typedoc-plugin-frontmatter": "^1.3.1",
    "typedoc-plugin-markdown": "4.0.0-next.23",
    "typedoc-vitepress-theme": "1.0.0-next.3",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitepress-knowledge": "^0.4.1",
    "vitepress-plugin-group-icons": "^1.7.1",
    "vitest-mock-extended": "^3.1.0",
    "vue": "^3.5.27",
    "wxt": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  }
}
